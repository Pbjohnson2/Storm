<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swerve.storm" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <activity
            android:name="com.swerve.storm.authorization.EntryActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.swerve.storm.contacts.ContactsActivity"
            android:label="@string/title_activity_contacts"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name="com.swerve.storm.mainmenu.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name="com.swerve.storm.mainmenu.RetrieveCashActivity"
            android:label="@string/title_activity_retrieve_cash"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name="com.swerve.storm.mainmenu.SendCashActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_send_cash"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN">
                </action>
            </intent-filter>
        </activity>
        <activity
            android:name="com.swerve.storm.mainmenu.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name="com.swerve.storm.authorization.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
    </application>

</manifest>
